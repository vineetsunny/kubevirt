apiVersion: kubevirt.io/v1
kind: VirtualMachine
metadata:
  name: my-virtual-machine
  namespace: gitops-test
spec:
  running: false  # Set to true to start the VM automatically
  template:
    metadata:
      labels:
        kubevirt.io/domain: my-virtual-machine
    spec:
      domain:
        cpu:
          cores: 2
        devices:
          disks:
            - name: containerdisk
              disk:
                bus: virtio
            - name: cloudinitdisk
              disk:
                bus: virtio
        resources:
          requests:
            memory: 2Gi
      volumes:
        - name: containerdisk
          containerDisk:
            image: quay.io/containerdisks/ubuntu:22.04  # Example image
        - name: cloudinitdisk
          cloudInitNoCloud:
            userData: |
              #cloud-config
              user: cloud-user
              password: mypassword
              chpasswd: { expire: False }
